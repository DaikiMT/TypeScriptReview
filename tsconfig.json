{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "./build",
		"rootDir": "./src",
		"lib": ["ES6"],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true
	},
	"exclude": ["node_modules"]
}
